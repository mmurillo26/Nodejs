<!DOCTYPE html>
html(lang="en")
  head
    include partials/header
  body
    header.barra
      h1 UpTask - Administrador de Proyectos
      a(href="/logout") Logout

    main.contenedor
      aside.contenedor-proyectos
        .panel.crear-proyecto
          a(href="/new-project" class="boton") New Project
            span +
        .panel.lista-proyectos
          ul#proyectos.proyectos
            if(projects.length)
              each project in projects
                li
                  a(href=`/projects/${project.url}`)= project.nombre

      block contenido
    script(src="/dist/bundle.js")
